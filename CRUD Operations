CRUD Operation :-

//To create the table
Create Table Register{
    Id INT Primarykey Auto_Increment,
    Name VARCHAR(225) NOT NULL,
    Email VARCHAR(225) NOT NULL,
    DateOFBirth DATE,
    Gender CHAR(10),
    Address CHAR(25)
}

//Insert Data To Table :-
